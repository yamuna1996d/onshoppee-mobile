<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spices"
    tools:context=".Register">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/appreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/applogo"/>

    <EditText
        android:id="@+id/usernamereg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appreg"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputstyle"
        android:hint="UserName"
        android:padding="20dp"
        android:textColor="#ffff"
        android:textColorHint="#a105a9"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reguser"
        android:layout_alignTop="@id/reguser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernamereg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="221dp"
        android:background="@drawable/inputstyle"
        android:hint="Mobile NUmber"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#ffff"
        android:textColorHint="#a105a9"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/regpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="142dp"
        android:background="@drawable/inputstyle"
        android:hint="Password"
        android:padding="20dp"
        android:textColor="#ffff"
        android:textColorHint="#a105a9"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button1"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="Register"
        android:textColor="#ffff"/>
</RelativeLayout>